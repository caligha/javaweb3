pipeline {
    agent any
    tools{
        maven 'local_maven'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvn = tool 'Default Maven';
                    withSonarQubeEnv() {
                        sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=javaweb-scan"
                    }
                }
            }
        }
        stage('Deploy to Tomcat Server') {
            steps {
                script {
                    deploy adapters: [tomcat7(credentialsId: 'tomcatcreds', path: '', url: 'http://3.145.51.100:8080/')], contextPath: null, war: '**/*.war'
                }
            }
        }
    }
}
